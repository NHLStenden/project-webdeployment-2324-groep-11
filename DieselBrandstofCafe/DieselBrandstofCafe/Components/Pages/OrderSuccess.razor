@page "/ordersuccess"
@inject NavigationManager NavigationManager

<div class="order-success-page">
    <div class="order-success-content">
        <h1>Order Confirmation</h1>
        <p>
            The order has been placed successfully. 
            Please ensure it is prepared promptly and delivered to the customer with care. 
            Let's make sure our fresh, tasty treats and beverages delight our guests!
        </p>

        <div class="order-success-actions">
            <button class="button-primary" @onclick="GoToMenu">Back to Menu</button>
            <button class="button-secondary" @onclick="GoToOrders">View Orders</button>
        </div>
    </div>
</div>

@code {
    void GoToMenu()
    {
        NavigationManager.NavigateTo("/menu");
    }

    void GoToOrders()
    {
        NavigationManager.NavigateTo("/dashboard");
    }
}
